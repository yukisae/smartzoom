{
   "manifest_version": 2,
   "background": {
     "scripts": [
       "background.js"
     ]
   },
   "content_scripts": [ {
      "js": [ "zoom.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
   } ],
   "description": "Right-click a column of text so zoom, or tap Shift and click, then press +/-/0 to adjust the font size. Esc unzooms.",
   "icons": {
      "128": "icon_128.png",
      "16": "icon_16.png",
      "48": "icon_48.png"
   },
   "name": "Smart zoom",
   "permissions": [ "contextMenus" ],
   "version": "0.1.7.2"
}
